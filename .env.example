# Server Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000

# React URLs
REACT_APP_URL=http://localhost:3000
REACT_APP_ADMIN_URL=http://localhost:3000/admin
REACT_APP_COMPANY_URL=http://localhost:3000/company
REACT_APP_STUDENT_URL=http://localhost:3000/student
REACT_APP_SCHOOL_URL=http://localhost:3000/school

# Authentication
REACT_APP_JWT_SECRET=your_jwt_secret_here
REACT_APP_JWT_EXPIRES_IN=1d

# File Upload
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Email Configuration  
REACT_APP_SMTP_HOST=smtp.gmail.com
REACT_APP_SMTP_PORT=587
REACT_APP_SMTP_USER=your-email@gmail.com
REACT_APP_SMTP_PASS=your-app-specific-password

# Other Settings
REACT_APP_DEFAULT_LANGUAGE=vi
REACT_APP_DEFAULT_TIMEZONE=Asia/Ho_Chi_Minh
REACT_APP_DEFAULT_PAGE_SIZE=10