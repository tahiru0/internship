# Server Configuration
REACT_APP_API_URL=https://techone.kcntt.edu.vn/api
REACT_APP_SOCKET_URL=https://techone.kcntt.edu.vn

# React URLs
REACT_APP_URL=https://techone.kcntt.edu.vn
REACT_APP_ADMIN_URL=https://techone.kcntt.edu.vn/admin
REACT_APP_COMPANY_URL=https://techone.kcntt.edu.vn/company
REACT_APP_STUDENT_URL=https://techone.kcntt.edu.vn/student
REACT_APP_SCHOOL_URL=https://techone.kcntt.edu.vn/school

# Authentication
REACT_APP_JWT_SECRET=dev_secret_key
REACT_APP_JWT_EXPIRES_IN=7d

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760  # 10MB for development
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Email Configuration (Development Gmail)
REACT_APP_SMTP_HOST=smtp.gmail.com
REACT_APP_SMTP_PORT=587
REACT_APP_SMTP_USER=dev.test@gmail.com
REACT_APP_SMTP_PASS=dev_test_password

# Development Settings
REACT_APP_DEFAULT_LANGUAGE=vi
REACT_APP_DEFAULT_TIMEZONE=Asia/Ho_Chi_Minh
REACT_APP_DEFAULT_PAGE_SIZE=20
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug

# Development Features
REACT_APP_ENABLE_MOCK_API=true
REACT_APP_ENABLE_DEBUG_TOOLS=true
REACT_APP_DISABLE_AUTH=false
REACT_APP_AUTO_LOGIN=false

# Cache Settings
REACT_APP_CACHE_DURATION=3600000  # 1 hour in milliseconds
REACT_APP_ENABLE_SERVICE_WORKER=false

# API Timeouts (in milliseconds)
REACT_APP_API_TIMEOUT=5000
REACT_APP_LONG_POLLING_TIMEOUT=30000